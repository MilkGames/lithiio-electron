{
  "name": "lithiio-electron",
  "build": {
    "productName": "Lithiio",
    "publish": ["github"]
  },
  "version": "0.1.0",
  "description": "An Electron application that will allow you to upload files to Lithi.io",
  "main": "index.js",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron .",
    "pack": "node_modules/.bin/electron-builder build --dir",
    "release": "node_modules/.bin/electron-builder build --linux snap deb --win --mac --publish always",
    "dist-linux": "node_modules/.bin/electron-builder build --linux snap deb",
    "dist-win": "node_modules/.bin/electron-builder build --win",
    "dist-mac": "node_modules/.bin/electron-builder build --mac"
  },
  "repository": {
    "type" : "git",
    "url" : "github:MilkGames/lithiio-electron"
  },
  "author": "MilkGames <hi@milkgames.pw> (https://milkgames.pw)",
  "license": "ISC",
  "dependencies": {
    "dialogs": "^1.1.20",
    "node-lithiio-upload": "^1.0.2",
    "timeago.js": "^4.0.0-beta.2"
  },
  "devDependencies": {
    "electron": "^4.0.6",
    "electron-rebuild": "^1.8.4",
    "electron-builder": "^20.38.5"
  }
}
